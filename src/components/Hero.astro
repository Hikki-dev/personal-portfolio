---
import type { HeroProps } from "@types";
type Props = HeroProps;

const { name, specialty, summary, email, cvLink, highlights } = Astro.props;
---

<section class="py-24 md:py-32" id="#hero">
  <div class="mb-6 flex flex-wrap gap-3">
    {
      highlights?.map((highlight) => (
        <span class="inline-flex items-center rounded-full bg-primary/10 px-3 py-1 text-xs font-medium text-primary border border-primary/20">
          {highlight}
        </span>
      ))
    }
  </div>

  <h1
    class="mb-1.5 font-serif text-7xl font-bold tracking-tightest text-white sm:text-8xl md:mb-0 md:text-9xl"
  >
    {name}
  </h1>
  <p
    class="mb-6 font-serif text-4xl leading-[46px] font-bold tracking-tighter text-primary sm:text-5xl md:text-6xl"
  >
    {specialty}
  </p>
  <p class="mb-8 text-base font-normal text-neutral md:text-lg max-w-2xl">
    {summary}
  </p>

  <!-- Key Value Props -->
  <div class="mb-12 grid grid-cols-1 gap-4 md:grid-cols-3">
    <div class="rounded-lg border border-neutral/20 bg-card p-4">
      <div class="flex items-center gap-3">
        <div
          class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary/10"
        >
          <svg
            class="h-5 w-5 text-primary"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <div>
          <p class="font-medium text-white text-sm">Fast Learner</p>
          <p class="text-xs text-neutral">
            Assignments delivered 1-2 weeks early
          </p>
        </div>
      </div>
    </div>

    <div class="rounded-lg border border-neutral/20 bg-card p-4">
      <div class="flex items-center gap-3">
        <div
          class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary/10"
        >
          <svg
            class="h-5 w-5 text-primary"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H9m0 0H5m0 0v-4a2 2 0 012-2h10a2 2 0 012 2v4"
            ></path>
          </svg>
        </div>
        <div>
          <p class="font-medium text-white text-sm">Full-Stack Ready</p>
          <p class="text-xs text-neutral">Frontend to Infrastructure</p>
        </div>
      </div>
    </div>

    <div class="rounded-lg border border-neutral/20 bg-card p-4">
      <div class="flex items-center gap-3">
        <div
          class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary/10"
        >
          <svg
            class="h-5 w-5 text-primary"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div>
          <p class="font-medium text-white text-sm">Production Ready</p>
          <p class="text-xs text-neutral">
            Managing live systems & deployments
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="flex items-center gap-4">
    <a
      class="inline-block rounded-full bg-primary px-8 py-5 text-sm leading-5 font-medium text-[#fff] hover:bg-primary/90 transition-colors"
      href={`mailto:${email}?subject=Let's discuss opportunities`}
    >
      Let's Connect
    </a>
    {
      cvLink && (
        <a
          class="text-sm underline text-primary hover:text-blue-400 transition-colors"
          href={cvLink}
          download
        >
          Download Resume
        </a>
      )
    }
    <a
      href="#projects"
      class="text-sm text-neutral hover:text-white transition-colors"
    >
      View My Work â†’
    </a>
  </div>
</section>
