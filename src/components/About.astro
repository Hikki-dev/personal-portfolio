---
import Section from "./Section.astro";
import type { AboutProps, HeroProps } from "@types";

type Props = AboutProps & Pick<HeroProps, "name">;

const { description, image, name } = Astro.props;
---

<Section text="About Me" href="about">
  <div class="grid gap-12 lg:grid-cols-2 lg:gap-16">
    {/* Text Content */}
    <div class="space-y-6">
      <div>
        <h3 class="mb-4 font-serif text-xl font-semibold text-white">
          The Journey So Far
        </h3>
        <p class="text-neutral leading-relaxed">{description}</p>
      </div>

      <div class="space-y-4">
        <div class="flex gap-4">
          <div class="flex-shrink-0">
            <div
              class="flex h-8 w-8 items-center justify-center rounded-full bg-primary/20"
            >
              <div class="h-2 w-2 rounded-full bg-primary"></div>
            </div>
          </div>
          <div>
            <h4 class="font-medium text-white">Started Software Engineering</h4>
            <p class="text-sm text-neutral">
              Began studies at APIIT with focus on practical, industry-ready
              skills
            </p>
          </div>
        </div>

        <div class="flex gap-4">
          <div class="flex-shrink-0">
            <div
              class="flex h-8 w-8 items-center justify-center rounded-full bg-primary/20"
            >
              <div class="h-2 w-2 rounded-full bg-primary"></div>
            </div>
          </div>
          <div>
            <h4 class="font-medium text-white">Built Production HomeLab</h4>
            <p class="text-sm text-neutral">
              Deployed and manage infrastructure for learning and development
            </p>
          </div>
        </div>

        <div class="flex gap-4">
          <div class="flex-shrink-0">
            <div
              class="flex h-8 w-8 items-center justify-center rounded-full bg-primary/20"
            >
              <div class="h-2 w-2 rounded-full bg-primary"></div>
            </div>
          </div>
          <div>
            <h4 class="font-medium text-white">
              Developed Full-Stack Projects
            </h4>
            <p class="text-sm text-neutral">
              Created web and mobile applications solving real-world problems
            </p>
          </div>
        </div>

        <div class="flex gap-4">
          <div class="flex-shrink-0">
            <div
              class="flex h-8 w-8 items-center justify-center rounded-full bg-primary/20"
            >
              <div class="h-2 w-2 rounded-full bg-primary"></div>
            </div>
          </div>
          <div>
            <h4 class="font-medium text-white">Ready for Growth</h4>
            <p class="text-sm text-neutral">
              Seeking opportunities to apply skills in a professional
              environment
            </p>
          </div>
        </div>
      </div>
    </div>

    {/* Image and Info */}
    <div class="space-y-6">
      <div class="relative mx-auto w-fit">
        <div class="aspect-square w-64 rotate-2 bg-white p-4 shadow-xl">
          <img
            class="aspect-square w-full object-cover"
            src={image}
            width="240"
            height="240"
            alt={name}
            loading="lazy"
          />
        </div>
        {/* Simple Stats */}
        <div
          class="absolute -bottom-4 -left-4 rounded-lg border border-neutral/20 bg-black p-3 shadow-lg"
        >
          <p class="text-sm font-medium text-white">100%</p>
          <p class="text-xs text-neutral">On-time delivery</p>
        </div>
      </div>

      {/* Quick Facts */}
      <div class="rounded-lg border border-neutral/20 bg-card p-4">
        <h4 class="mb-3 font-serif text-lg font-semibold text-white">
          Quick Facts
        </h4>
        <div class="space-y-2 text-sm">
          <div class="flex justify-between">
            <span class="text-neutral">Location:</span>
            <span class="text-white">Colombo, Sri Lanka</span>
          </div>
          <div class="flex justify-between">
            <span class="text-neutral">Education:</span>
            <span class="text-white">APIIT</span>
          </div>
          <div class="flex justify-between">
            <span class="text-neutral">Status:</span>
            <span class="text-green-400">Seeking Opportunities</span>
          </div>
          <div class="flex justify-between">
            <span class="text-neutral">Availability:</span>
            <span class="text-white">Flexible & Ready</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</Section>
